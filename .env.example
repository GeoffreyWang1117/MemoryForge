# MemoryForge Environment Variables
# Copy this file to .env and fill in your values

# Application
DEBUG=false
LOG_LEVEL=INFO

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-qdrant-api-key

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# OpenAI API Key (required if using OpenAI)
LLM_OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key (required if using Anthropic)
# LLM_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Embedding Model
LLM_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Memory Settings
MEMORY_WORKING_MAX_ENTRIES=100
MEMORY_WORKING_MAX_TOKENS=8000
MEMORY_EPISODIC_SUMMARY_THRESHOLD=10
